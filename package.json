{
  "name": "up.js",
  "version": "1.0.0",
  "description": "A lightweight solution for asynchronous loading/prefetching resources(css, js, images, etc.) on demand",
  "main": "build/up.js",
  "scripts": {
    "prebuild": "rimraf build && mkdirp build",
    "build": "uglifyjs src/up.js -o build/up.js --beautify",
    "build-web": "uglifyjs src/up.web.js -o build/up.web.js --no-dead-code --mangle --compress",
    "prepublishOnly": "npm run build && npm run build-web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apyrkh/up.js.git"
  },
  "keywords": [
    "performance",
    "optimization",
    "asynchronous",
    "resource",
    "loading"
  ],
  "author": "Aliaksandr Pyrkh <alexpyrkh@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apyrkh/up.js/issues"
  },
  "homepage": "https://github.com/apyrkh/up.js#readme",
  "dependencies": {},
  "devDependencies": {
    "mkdirp": "0.5.1",
    "rimraf": "3.0.0",
    "uglify-js": "2.7.0"
  }
}
